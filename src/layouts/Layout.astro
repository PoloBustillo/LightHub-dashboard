---
import pkg from "../../package.json" assert { type: "json" };
import NavBar from "@components/NavBar.astro";
import SideBar from "../components/SideBar.astro";
import { SITE_TITLE } from "@utils/constants";
import { ViewTransitions } from "astro:transitions";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{SITE_TITLE} — {title} — v{pkg.version}</title>
    <meta charset="UTF-8" />
    <meta name="description" content={pkg.description} />
    <meta name="" content={pkg.description} />
    <!-- <link rel="icon" type="image/svg+xml" href={url("favicon.svg")} />
    <link
      rel="sitemap"
      type="application/xml"
      href={url("sitemap-index.xml")}
    /> -->
    <meta name="author" content="PoloBustillo" />
    <ViewTransitions />
  </head>
  <body>
    <NavBar />
    <SideBar />
    <main class="bg-white dark:bg-[#101827]">
      <div class="p-4 sm:ml-64">
        <div
          class="p-4 min-h-[120vh] border-2 border-gray-200 border-dashed rounded-lg dark:border-gray-700 mt-14"
        >
          <slot />
        </div>
      </div>
    </main>
  </body><script
    is:inline
    src="https://cdn.jsdelivr.net/npm/flowbite@2.5.2/dist/flowbite.min.js"
  ></script>
</html>
